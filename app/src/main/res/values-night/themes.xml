<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NewsApp" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/like_black</item>
    </style>

    <style name="SCREEN">
        <item name="background">@color/background_night</item>
    </style>

    <style name="CustomButtonBottomSheet">
        <item name="android:backgroundTint">@color/button</item>
        <item name="android:textColor">@color/button_text</item>
    </style>

    <style name="CustomCardView">
        <item name="android:backgroundTint">@color/card_night</item>
    </style>

    <style name="CustomTextView">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
